/* pages/secPage/jobDetail/jobDetail.wxss */
.main-container {
  width: 90%;
  margin-left: 5%;
  padding-bottom: 140rpx;
}

.main-container2 {
  width: 90%;
  margin-left: 5%;
  padding-bottom: 240rpx;
}

.line1 {
  height: 66rpx;
  line-height: 66rpx;
  padding: 50rpx 0 10rpx 0;
}

.icon {
  width: 36rpx;
}

.text {
  padding-left: 10rpx;
  color: #444444;
  font-size: 28rpx;
}

.hr-card, .com-card {
  margin-top: 40rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
}

.hr-card image, .com-card image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx
}

.com-card, .com_address {
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #efefef;
}

.com_address {
  padding-top: 40rpx;
}

.right-icon {
  width: 32rpx;
  height: 32rpx;
}

.m_40T {
  margin-top: 40rpx;
}

.m_20T {
  margin-top: 20rpx;
}

.fullH {
  height: 100%;
}

.minH {
  max-height: 500rpx;
  overflow: hidden;
}

.showFull {
  height: 120rpx;
  line-height: 240rpx;
  background-image: linear-gradient(rgba(255,255,255,.5), rgba(255,255,255,1));
  margin-top: -120rpx;
  position: absolute;
  width: 100%;
  margin-left: -5%
}

.tags-container {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #efefef;
}

.tags-container text {
  font-size: 26rpx;
  margin: 0 10rpx 10rpx 0;
  padding: 8rpx 20rpx;
  background-color: #efefef;
  color: #555555;
  border-radius: 8rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding-top: 16rpx;
  border-top: 1px solid #efefef;
}

.p_100B {
  padding-bottom: 100rpx;
}

.flex1 {
  flex: 1;
  font-size: 24rpx;
}

.flex1 image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}

.flex3 {
  flex: 5;
}

.flex3 button {
  width: 90% !important;
  font-size: 28rpx;
  font-weight: 400;
  padding: 24rpx 48rpx !important;
}

.p_20R {
  padding-right: 20rpx;
}

.p_30R {
  padding-right: 30rpx;
}

.p_10B {
  padding: 10rpx 0;
}