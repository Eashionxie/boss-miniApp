/* pages/search/search.wxss */
.input-container {
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1px solid #efefef;
}
.input-box {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 50rpx;
  width: 90%;
  margin-left: 5%;
  /* padding: 40rpx 0; */
}

.input-box image {
  width: 34rpx
}

.input-box input {
  padding-left: 20rpx;
}

.del-icon::after {
  content: "\2716";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-40%);
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: #cccccc;
  color: #fff;
  border-radius: 50%;
}

.main-container {
  width: 90%;
  margin: 0 5%;
  padding-top: 40rpx;
}

.text-content {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx -20rpx 0 0;
}

.historys {
  display: inline-block;
  font-size: 24rpx;
  background-color: #efefef;
  border-radius: 10rpx;
  padding: 2rpx 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 30rpx;
  color: #444444;
}